<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".DemoActivity">

    <co.braspay.clickableCompoundView.TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:background="@drawable/test_selector"
        app:leftImage="@drawable/ic_show"
        app:rightText="Testing" />

    <co.braspay.clickableCompoundView.EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="5dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="Hello World!"
        app:leftText="@string/app_name"
        app:rightImage="@drawable/ic_show" />

    <co.braspay.clickableCompoundView.EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="Hello World!"
        android:background="@drawable/test_selector"
        app:leftText="@string/app_name"
        app:rightImage="@drawable/ic_show" />

    <co.braspay.clickableCompoundView.EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="Hello World!"
        app:rightImage="@drawable/ic_show" />

    <co.braspay.clickableCompoundView.EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="Hello World!"
        app:leftImage="@drawable/ic_show" />

    <co.braspay.clickableCompoundView.EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="Hello World!" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hello World!"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:drawableLeft="@drawable/ic_show"
        android:drawableRight="@drawable/ic_show"/>
</LinearLayout>
